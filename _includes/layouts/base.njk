<!-- _includes/layouts/base.njk -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }}{% else %}Your Site Name{% endif %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
			href="https://unpkg.com/prism-themes@1.9.0/themes/prism-gruvbox-dark.css"
			rel="stylesheet"
		/>
    <style>
        /* Base styles for typography and spacing */
        :root {
          --primary-color: #fb4934;      /* Gruvbox red */
          --secondary-color: #fe8019;    /* Gruvbox orange */
          --accent-color: #fabd2f;       /* Gruvbox yellow */
          --background-color: #282828;   /* Gruvbox dark0_hard */
          --text-color: #ebdbb2;         /* Gruvbox light0 */
          --code-background: #3c3836;    /* Gruvbox dark1 */
          --border-color: #504945;       /* Gruvbox dark2 */
          --container-width: 50%;
          --heading-font: -apple-system, BlinkMacSystemFont, "Source Code Pro", Roboto, sans-serif;
          --body-font: "Source Code Pro", serif;
        }

        /* Reset and base styles */
        body {
          margin: 0;
          padding: 0;
          font-family: var(--body-font);
          color: var(--text-color);
          line-height: 1.6;
          background: var(--background-color);
        }

        /* Container for content */
        main {
          width: var(--container-width);
          margin: 0 auto;
          max-width: 800px;
          min-height: 100vh;
        }

        /* Typography */
        h1, h2, h3, h4, h5, h6 {
          font-family: var(--heading-font);
          color: var(--primary-color);
          margin-top: 2em;
          margin-bottom: 1em;
          line-height: 1.3;
        }

        h1 { font-size: 2.5rem; }
        h2 { font-size: 2rem; }
        h3 { font-size: 1.75rem; }

        p {
          margin-bottom: 1.5rem;
        }

        /* Links */
        a {
          color: var(--accent-color);
          text-decoration: none;
          border-bottom: 1px solid transparent;
          transition: border-color 0.2s ease;
        }

        a:hover {
          border-bottom-color: var(--accent-color);
        }

        /* Code blocks */
        pre, code {
          /* background: var(--code-background); */
          font-family: "Menlo", "Monaco", "Courier New", monospace;
          border-radius: 4px;
        }

        pre {
          padding: 1rem;
          overflow-x: auto;
          border: 1px solid var(--border-color);
        }

        code {
          padding: 0.2em 0.4em;
        }

        /* Blockquotes */
        blockquote {
          margin: 2rem 0;
          padding-left: 1.5rem;
          border-left: 4px solid var(--accent-color);
          color: var(--secondary-color);
          font-style: italic;
        }

        /* Images */
        img {
          max-width: 100%;
          height: auto;
          border-radius: 4px;
          margin: 2rem 0;
        }

        /* Tables */
        table {
          width: 100%;
          border-collapse: collapse;
          margin: 2rem 0;
        }

        th, td {
          padding: 0.75rem;
          border: 1px solid var(--border-color);
        }

        th {
          background: var(--code-background);
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
          :root {
            --container-width: 90%;
          }
          
          h1 { font-size: 2rem; }
          h2 { font-size: 1.75rem; }
          h3 { font-size: 1.5rem; }
          
          main {
            padding: 1rem;
          }
        }
    </style>
</head>
<body>
    <main>
        {{ content | safe }}
    </main>
</body>
</html>
